<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
    <bean id="alertaDao" class="com.demexis.igestion.dao.AlertaDAOImpl">
        <property name="dataSource" ref="dataSource"></property>
        <property name="queries">
            <props>
                <prop key="guardaAlertaProyecto">
                    <![CDATA[
                        INSERT INTO ALERTA_PROYECTO (ID_TAREA, ID_TIPO_ALERTA, ID_FASE_TAREA_ALERTA, PORCENTAJE_AVANCE, FECHA_ALTA, ESTATUS)
                        VALUES (?, ?, ?, ?, NOW(), 'A')
                    ]]>
                </prop>                   
            </props>
        </property>
    </bean>
</beans>